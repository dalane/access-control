{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "pretty": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.schema.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
